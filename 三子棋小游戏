#include<stdio.h>
int main()
{
	int arr[4][4]={0};
	int white[2] = { 0 }; int black[2] = { 0 };
	for (int flag = 0; flag == 0;)
	{
		for (int i = 1; i < 4; i++)
		{
			for (int j = 1; j < 4; j++)
				printf("%d ", arr[i][j]);
			printf("\n");
		}

		printf("pleace black play chess:");
		scanf_s("%d %d", &black[0], &black[1]);
		arr[black[0]][black[1]] = -1;
		for (int i = 1; i < 4; i++)
		{
			for (int j = 1; j < 4; j++)
				printf("%d ", arr[i][j]);
			printf("\n");
		}
		
		for (int i = 1; i < 4; i++)
		{
			if (arr[i][1] == -1)
				if (arr[i][2] == -1)
					if (arr[i][3] == -1)
					{
						printf("black win"); return 0; flag = 1;
					}
		}
		for (int i = 1; i < 4; i++)
		{
			if (arr[1][i] == -1)
				if (arr[2][i] == -1)
					if (arr[3][i] == -1)
					{
						printf("black win"); return 0; flag = 1;
					}
		}
		if (arr[1][1] == -1)
			if (arr[2][2] == -1)
				if (arr[3][3] == -1)
				{
					printf("black win"); return 0; flag = 1;
				}

		printf("pleace white play chess:");
		scanf_s("%d %d", &white[0], &white[1]);
		arr[white[0]][white[1]] = 1;
		for (int i = 1; i < 4; i++)
		{
			if (arr[i][1] == 1)
				if (arr[i][2] == 1)
					if (arr[i][3] == 1)
					{
						printf("white win"); return 0; flag = 1;
					}
		}
		for (int i = 1; i < 4; i++)
		{
			if (arr[1][i] == 1)
				if (arr[2][i] == 1)
					if (arr[3][i] == 1)
					{
						printf("white win"); return 0; flag = 1;
					}
		}
		if (arr[1][1] == 1)
			if (arr[2][2] == 1)
				if (arr[3][3] == 1)
				{
					printf("white win"); return 0; flag = 1;
				}
	}
}
